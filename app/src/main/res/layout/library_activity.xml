<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundlib25"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/Lb"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:text="LIBRARY"
            android:textAlignment="center"
            android:textColor="@color/fac"
            android:textSize="60sp"
            android:textStyle="bold"
            android:translationY="-12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/statistiques"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="@color/red"
            android:text="Statistiques" />

        <Button
            android:id="@+id/reseaux"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="@color/green"
            android:text="Initiation Ã  la programmation" />

        <Button
            android:id="@+id/sgbdr"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="@color/MidnightBlue"
            android:text="SGBDR" />

        <Button
            android:id="@+id/matlab"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:backgroundTint="@color/purple2"
            android:text="MATLAB" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

