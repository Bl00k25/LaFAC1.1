<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:scaleY="1.4"
            android:translationY="-450dp"
            app:srcCompat="@drawable/_70b4a" />


        <TextView
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:text="Sign UP"
            android:textAlignment="center"
            android:textColor="@color/fac"
            android:textSize="60sp"
            android:textStyle="bold"
            android:translationY="-750dp" />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/background_edt"
            android:ems="10"
            android:hint="Entrer votre nom..."
            android:inputType="textPersonName"
            android:paddingStart="28dp"
            android:textColorHint="#404840"
            android:textSize="17sp"
            android:translationY="-700dp" />

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/background_edt"
            android:ems="10"
            android:hint="Entrer votre email..."
            android:inputType="textPersonName"
            android:paddingStart="28dp"
            android:textColorHint="#404840"
            android:textSize="17sp"
            android:translationY="-690dp" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/background_edt"
            android:ems="10"
            android:hint="Entrer le mot de passe..."
            android:inputType="textPassword"
            android:paddingStart="28dp"
            android:textColorHint="#404840"
            android:textSize="17sp"
            android:translationY="-680dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_blue"
            android:translationY="-650dp">

            <TextView
                android:id="@+id/btn_signup"
                android:layout_width="291dp"
                android:layout_height="49dp"
                android:text="S'inscrire"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>